---
import Base from "@/layouts/Base.astro";
import Header from "@/partials/Header.astro";
import Testimonial from "@/partials/Testimonial.astro";
import Splash from "@/partials/Splash.astro";
import Intro from "@/partials/Intro.astro";
import Features from "@/partials/Features.astro";
import Services from "./services/index.astro";
import { getEntryBySlug } from "astro:content";

const features = await getEntryBySlug("sections", "features");
const testimonial = await getEntryBySlug("sections", "testimonial");
const intro = await getEntryBySlug("sections", "intro");
const splash = await getEntryBySlug("sections", "splash");
---

<Base>
  <Header />
  <Splash splash={splash} />
  <div class="space-y-24 px-4 py-32 md:px-8">
    <Intro intro={intro} />
    <Services />
    <Testimonial testimonial={testimonial} />
    <Features features={features} />
  </div>
</Base>
