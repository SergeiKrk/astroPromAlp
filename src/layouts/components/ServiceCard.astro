---
import { Icon } from "astro-icon";
import config from "@/config/config.json";

const {
  summary_length,
  services_folder,
}: { summary_length: number; services_folder: string } =
  config.settingsServices;
const { data } = Astro.props;
const { title, icon, descript, price } = data.data;
---

<div
  class="h-full w-full rounded-3xl bg-body p-5 shadow-lg hover:bg-sky-50 hover:shadow-2xl dark:bg-sky-950"
>
  <a href={`/${services_folder}/${data.slug}`}>
    <div class="mb-3 flex items-center gap-x-4 px-2 pb-0 pt-2">
      <div
        class="inline-flex h-[82px] w-[82px] min-w-[82px] items-center justify-center rounded-full border-4 border-sky-100 bg-gradient-to-br from-sky-700 via-cyan-700 to-teal-700"
      >
        <Icon
          class="h-9 w-9 text-sky-100 duration-200 hover:scale-150"
          name={icon}
        />
      </div>
      <div class="max-w-24">
        <h3
          class="block text-[18px] font-semibold text-gray-800 dark:text-white"
        >
          {title}
        </h3>
        <p class="text-xs text-gray-600 dark:text-gray-400">{price} â‚½</p>
      </div>
    </div>
    <p class="px-2 text-gray-600 dark:text-gray-400">{descript}</p>
  </a>
</div>
